<div class="login-bg gradient-blue-bg " style="background-image: url('@Url.Content("~/images/laptop-photo.jpg")');">
    <div class="container py-lg-5 my-lg-5">
        <div class="row no-gutters pl-3">
            <div class="order-last order-md-first col-sm-12 col-md-3 d-flex flex-column">
                <div class="form-group">
                    <label class="text-white" for="username">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
                </div>
                <div class="form-group">
                    <label class="text-white d-flex" for="password">
                        Password
                    </label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                </div>
                <button class="btn btn-primary btn-block my-4 text-uppercase"
                        id="signInBtn">
                    Sign In
                </button>

            </div>
            <div class="order-first order-md-last col-sm-12 col-md-7 offset-sm-0 offset-md-2 d-flex flex-column pb-sm-4 pb-md-0">
                <h3 class="text-white">Welcome to the </h3>
                <h1 class="text-white mt-2 mb-3">CMS.Net Helpdesk and API Site</h1>
                <p>
                    This site is use for CMS administrative purposes and hosts our CMS API.
                </p>
                <div role="alert" class="alert alert-danger" id="unableToSignInAlert" style="display: none">
                    Your <b>Username</b> and/or <b>Password</b> do not match our records or you do not have sufficient permissions to login.
                </div>
            </div>
        </div>
    </div>
</div>
<div id="spinnerDiv" style="position: relative; height: 100px; display:none">
    <div id="spinner"></div>
</div>

@section scripts{
    <script>
        @*$(function() {
            window.CLUI.spinnerInit(document.getElementById('spinner'));
        });*@

        $('#signInBtn').click(function () { login(); });

        $("#password").keyup(function(event) {
            if (event.keyCode === 13) {
                login();
            }
        });

        function login() {
            var username = jQuery('#username').val();
            var password = jQuery('#password').val();
            $('#signInBtn').hide();
            $('#spinnerDiv').show();
            $('#unableToSignInAlert').hide();

            $.ajax("@Url.Action("SignIn", "Account")",
                {
                    method: "POST",
                    data: { username: username, password: password }
                }).done(function (data) {
                    console.log(data)
                    window.location.href = "/";
                }).fail(function (jqXHR) {
                    console.log(jqXHR)
                    jQuery('#unableToSignInAlert').show();
                    $('#signInBtn').show();
                    $('#spinnerDiv').hide();
                });
        };
    </script>
}