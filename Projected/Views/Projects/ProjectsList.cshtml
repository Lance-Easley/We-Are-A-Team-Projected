@{
    ViewData["Title"] = "Home Page";
}

<div id="profilesDiv">
    <div>
        <table class="table table-bordered table-striped col-2-slim">
            <thead>
                <tr>
                    <th scope="col">Project Name</th>
                    <th scope="col">Check Box?</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: profiles">
                <tr>
                    <td data-bind="text: projectName"></td>
                    <td>
                        <div class="mb-3">
                            <button class="btn btn-primary float-right" id="ProjectsView" data-bind="click: $parent.getGroups">View Projects</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="~/js/homePage.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var ProfilesViewModel = new GroupViewModel(@ViewBag.Id);
            ko.applyBindings(ProfilesViewModel, document.getElementById('profilesDiv'));
            ProfilesViewModel.getProfiles();
        });
    </script>
}
